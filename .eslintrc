{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "space-before-function-paren": "off",
    "global-require": "off",
    "semi": "warn",
    "arrow-body-style": "off",
    "no-multiple-empty-lines": ["warn", {"max": 1}]
  }
}